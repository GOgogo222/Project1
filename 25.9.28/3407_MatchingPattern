//子字符串匹配模式
//解题用到的函数对我来说过于复杂

class Solution {
public:
    bool hasMatch(const string& s, const string& p) {
        int star = p.find('*');
        int i = s.find(p.substr(0, star));
        return i != string::npos && s.substr(i + star).find(p.substr(star + 1)) != string::npos;
    }
};

